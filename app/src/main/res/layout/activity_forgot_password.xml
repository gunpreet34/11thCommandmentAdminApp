<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/containerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_margin="@dimen/container_layout_margin">

        <TextView
            android:id="@+id/login_title"
            style="@style/LabelStyle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/layout_in_between_margins"
            android:fontFamily="@font/sf_pro_display_medium"
            android:text="Please enter your email"
            android:textColor="@color/colorPrimary" />


        <EditText
            android:id="@+id/et_email_address"
            style="@style/EditTextStyle"
            android:textAlignment="center"
            android:layout_below="@id/login_title"
            android:layout_marginTop="@dimen/layout_in_between_margins"
            android:hint="Enter your email here"
            android:inputType="textEmailAddress" />

        <Button
            android:id="@+id/btn_submit"
            style="@style/SolidButtonStyle"
            android:layout_width="match_parent"
            android:layout_below="@id/et_email_address"
            android:layout_marginTop="@dimen/layout_in_between_margins"
            android:text="Submit" />


        <TextView
            android:id="@+id/tv_go_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Go back"
            android:fontFamily="@font/sf_pro_display_medium"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"/>

    </RelativeLayout>
</RelativeLayout>
