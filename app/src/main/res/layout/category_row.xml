<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <RelativeLayout
        android:layout_width="0dp"

        android:layout_height="wrap_content"
        android:layout_weight="1"

        >


        <android.support.v7.widget.CardView
            android:id="@+id/category_card0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"

            android:elevation="3dp"
            app:cardBackgroundColor="#bff8f8f8"
            app:cardCornerRadius="6sp"

            >

            <TextView
                android:id="@+id/tv_categories0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:hint="Category 1"
                android:padding="4dp"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"


        android:layout_weight="1">

        <android.support.v7.widget.CardView
            android:id="@+id/category_card1"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:elevation="3dp"

            app:cardBackgroundColor="#bff8f8f8"
            app:cardCornerRadius="6sp">

            <TextView
                android:id="@+id/tv_categories1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:hint="Category 1"
                android:padding="4dp"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_weight="1">

        <android.support.v7.widget.CardView
            android:id="@+id/category_card2"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:elevation="3dp"


            app:cardBackgroundColor="#bff8f8f8"
            app:cardCornerRadius="6sp">

            <TextView
                android:id="@+id/tv_categories2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:hint="Category 1"
                android:padding="4dp"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

        </android.support.v7.widget.CardView>
    </RelativeLayout>
</LinearLayout>