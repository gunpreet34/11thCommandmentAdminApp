<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".activities.ChooseActivity">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:padding="20dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/but_simple_add"
            android:src="@drawable/add"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:layout_toEndOf="@id/but_simple_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Simple Advertisement"
            android:paddingLeft="20dp"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_toRightOf="@id/but_simple_add" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:padding="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/but_image_add"
            android:src="@drawable/image_add"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:layout_toEndOf="@id/but_image_add"
            android:text="Add Image Advertisement"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_toRightOf="@id/but_image_add" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:padding="20dp"
        android:orientation="horizontal">

        <ImageView
            android:src="@drawable/video_add"
            android:id="@+id/but_video_add"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Video Advertisement"
            android:layout_toEndOf="@id/but_video_add"
            android:paddingLeft="20dp"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_toRightOf="@id/but_video_add" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:padding="20dp"
        android:orientation="horizontal">

        <ImageView
            android:src="@drawable/unverified"
            android:id="@+id/but_verify_add"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show All Advertisements"
            android:layout_toEndOf="@id/but_verify_add"
            android:paddingLeft="20dp"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_toRightOf="@id/but_verify_add" />

    </RelativeLayout>





</LinearLayout>